{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../../lib",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["esnext", "dom"]
  },
  "include": [
    "./index.ts",
    "construct.ts",
    "dispose/**/*.ts",
    "functions/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "spec"
  ]
}
